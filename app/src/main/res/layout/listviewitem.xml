<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/customListItem"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayout">

    <RelativeLayout
        android:id="@+id/relativeLayoutImage"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_alignParentTop="true"
        android:background="#ff0a492c"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp">

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:maxHeight="50dp"
            android:maxWidth="50dp"
            android:minHeight="45dp"
            android:minWidth="45dp"
            android:padding="2dp"
            android:background="#ffffffff"
            android:layout_margin="1dp" />

        <TextView
        android:id="@+id/textViewItemLink"
        android:text="itemLink"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#008800"
            android:visibility="invisible"
            android:layout_below="@+id/itemImage"
            android:layout_alignLeft="@+id/itemImage"
            android:layout_alignStart="@+id/itemImage" />
    </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2">

        <TextView
            android:id="@+id/textViewItemSnippet"
            android:layout_height="wrap_content"
            android:text="description"
            android:layout_width="wrap_content"
            android:textSize="15dip"
            android:layout_below="@+id/textViewItemLink"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="2dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:id="@+id/textViewPrice"
        android:paddingRight="5dp"
        android:textColor="#ffff6519"
        android:textSize="20dp"
        android:layout_above="@+id/linearLayout2"
        android:layout_centerHorizontal="true" />
    <Button android:id="@+id/mapbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/map"
        android:layout_below="@+id/textViewItemTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:id="@+id/textViewItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="itemTitle"
        android:textSize="16dip"
        android:textColor="#f32c5012"
        android:autoText="false"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/linearLayout"
        android:layout_toEndOf="@+id/linearLayout" />

</RelativeLayout>
